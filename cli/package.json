{
  "name": "@lunarj/p-gen",
  "bin": "dist/src/main.js",
  "version": "1.3.0",
  "description": "A command line to transform Hasura permissions into Casl-compatible ones.",
  "author": "Juan Lunar",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juanjlunar/p-gen"
  },
  "scripts": {
    "build": "NODE_ENV=production nest build",
    "local:pack": "yarn pack --out dist/p-gen.tgz && mv ./dist/p-gen.tgz $(echo \"$HOME/\")/local-dist-packages",
    "local:pack2": "echo $(echo \"$HOME/\")",
    "build:prod": "yarn fresh:install && NODE_ENV=production nest build && yarn fresh:install --production",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:cov:watch": "vitest --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "pretest:e2e": "docker compose up -d",
    "test:e2e": "yarn pretest:e2e && vitest run --config ./vitest.config.e2e.mts && yarn posttest:e2e",
    "posttest:e2e": "yarn test:e2e:down",
    "pretest:e2e:watch": "docker compose up -d",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.mts",
    "posttest:e2e:watch": "yarn test:e2e:down",
    "test:e2e:down": "docker compose kill hasura && docker compose down",
    "call": "NODE_ENV=development npx ts-node src/main.ts",
    "fresh:install": "rm -r node_modules | echo && yarn install --frozen-lockfile"
  },
  "files": [
    "dist/src/**",
    "dist/index.d.ts",
    "dist/cosmiconfig/*"
  ],
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "axios": "^1.6.8",
    "chalk": "4.1.2",
    "cosmiconfig": "^9.0.0",
    "figlet": "^1.7.0",
    "flat": "^5.0.2",
    "lodash": "^4.17.21",
    "nest-commander": "^3.12.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@casl/ability": "^6.7.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.8",
    "@types/flat": "^5.0.5",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.3.1",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nest-commander-testing": "^3.3.0",
    "pluralize": "8.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "unplugin-swc": "^1.4.4",
    "vitest": "^1.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@4.6.0"
}
